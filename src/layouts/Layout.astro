---
import Head from "@templates/Head.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro-Bags</title>
    <Head />
  </head>
  <body>
    <div id="root">
      <main id="main">
        <slot />
      </main>
    </div>
  </body>
</html>

<style is:global>
  :root {
    box-sizing: border-box;
    scroll-behavior: smooth;
    //scrollbar-width: none;
    interpolate-size: allow-keywords;
    user-select: none;
  }

  @custom-media --mobile (width < 428px);
  @custom-media --tablet-sm (427px < width < 576px);
  @custom-media --tablet-md (575px < width < 768px);
  @custom-media --tablet-lg (767px < width < 992px);
  @custom-media --laptop-sm (991px < width < 1280px);
  @custom-media --laptop-md (1279px < width < 1440px);
  @custom-media --laptop-lg (1439px < width < 1686px);
  @custom-media --desktop (width > 1685px);

  *,
  *::before,
  *::after {
    box-sizing: inherit;
    padding-block: 0;
    padding-inline: 0;
    margin-block: 0;
    margin-inline: 0;
  }

  *::before,
  *::after {
    font-size: inherit;
  }

  html,
  body {
    block-size: 100%;
    inline-size: 100%;
  }

  body {
    font-family: var(--font-maison-mono);
  }

  body:has(dialog[open]) {
    overflow: hidden;
  }

  #root {
    position: relative;
    min-block-size: 100dvh;
    display: flex;
    flex-direction: column;
  }

  #main {
    position: relative;
    flex-grow: 1;
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-size: inherit;
    font-weight: inherit;
  }

  a {
    color: inherit;
    text-decoration: none;
  }

  address {
    font-style: inherit;
  }

  img {
    display: block;
  }

  ul,
  ol {
    list-style: none;
  }

  input {
    font-family: inherit;
    font-size: inherit;
    font-weight: inherit;
    color: inherit;
    border: none;
    outline: none;
  }

  input::placeholder {
    font-family: inherit;
    font-size: inherit;
    font-weight: inherit;
    color: inherit;
  }

  input[type="checkbox"],
  input[type="radio"],
  input[type="search"]::-webkit-search-cancel-button {
    appearance: none;
  }

  fieldset {
    border: none;
  }

  textarea {
    font-family: inherit;
    font-size: inherit;
    border: none;
    background: none;
    outline: none;
  }

  button {
    font-family: inherit;
    font-weight: inherit;
    font-size: inherit;
    color: inherit;
    border: none;
    outline: none;
    background: none;
    cursor: pointer;
  }

  button:disabled {
    cursor: not-allowed;
  }

  dialog {
    border: none;
  }

  summary {
    list-style: none;
  }

  details {
    overflow: hidden;
  }

  details::details-content {
    block-size: 0;
    transition:
      block-size 0.2s,
      content-visibility 0.2s;
    transition-behavior: allow-discrete;
  }

  details[open]::details-content {
    block-size: auto;
  }

  [popover] {
    border: none;
  }

  [class$="__container"] {
    max-inline-size: 1686px;
    margin-inline: auto;
    padding-inline: 20px;

    @media (--desktop) {
      padding-inline: 100px;
    }
  }
</style>
